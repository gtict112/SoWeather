<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="5dip" />

            <gradient
                android:angle="0"
                android:centerColor="#f1f1f9"
                android:centerY="0.75"
                android:endColor="#f1f1f9"
                android:startColor="#f1f1f9" />
        </shape>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:endColor="#9999cc"
                    android:startColor="#9999cc" />
            </shape>
        </clip>
    </item>

</layer-list>