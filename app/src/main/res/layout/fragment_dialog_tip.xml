                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical|left"
                            android:text="未来7天预报"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/date_rotate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/up" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/date_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                                android:id="@+id/date_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="12/03"
                                android:textColor="@color/line"
                                android:textSize="12sp" />

                            <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                                android:id="@+id/date_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="12/04"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                                android:id="@+id/date_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
