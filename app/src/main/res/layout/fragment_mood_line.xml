<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/left_fragment"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBE4D3"
        android:layout_marginTop="50dp">

        <com.example.administrator.soweather.com.example.administrator.soweather.view.HeartLayout
            android:id="@+id/heart_layout"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/list_address"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#e0E4C99F">
            </ListView>

            <TextView
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="第一次来到这个城市,赶快写点什么吧!"
                android:textSize="15sp">
            </TextView>

            <ListView
                android:id="@+id/list_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
               >
            </ListView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>