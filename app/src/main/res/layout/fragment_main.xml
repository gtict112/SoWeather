<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/table_white_shape"
                android:drawableLeft="@mipmap/update"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textColor="@color/grey"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/background_progress"
                    android:textSize="50sp"/>

                <TextView
                    android:id="@+id/code_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/background_progress"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tem_min_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_progress"
                    android:textSize="18sp"/>

                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/background_progress"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_white_shape"
                    android:text="PM25"
                    android:textColor="#C76114"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:textColor="#C76114"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/qlty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:textColor="#C76114"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_white_shape"
                    android:src="@mipmap/clothes"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生活资讯"
                        android:textColor="@color/greed"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/greed"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/table_white_shape"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/code_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        />

                    <TextView
                        android:id="@+id/code_txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/background_progress"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/wind_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wind_img"/>

                    <TextView
                        android:id="@+id/wind_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/background_progress"
                        android:textSize="14sp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <FrameLayout
        android:id="@+id/frame_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#1D4951"
        android:visibility="gone"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="0.8dp"
            android:background="@color/grey"/>

        <ImageView
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/down"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/day_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="11.25(明)"
                    android:textColor="@color/greed"/>

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/day_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="11.26"
                    android:textColor="@color/greed"/>

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/day_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="11.27"
                    android:textColor="@color/greed"/>

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/day_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="11.28"
                    android:textColor="@color/greed"/>

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/day_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="11.29"
                    android:textColor="@color/greed"/>

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/day_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="11.30"
                    android:textColor="@color/greed"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_white"
                android:orientation="horizontal">

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/weather_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="晴"
                    android:textColor="@color/background_progress"/>

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/weather_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="晴"
                    android:textColor="@color/background_progress"/>

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/weather_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="晴"
                    android:textColor="@color/background_progress"/>

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/weather_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="晴"
                    android:textColor="@color/background_progress"/>

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/weather_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="晴"
                    android:textColor="@color/background_progress"/>

                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutofitTextView
                    android:id="@+id/weather_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="晴"
                    android:textColor="@color/background_progress"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/day_img_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    />

                <ImageView
                    android:id="@+id/day_img_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    />


                <ImageView
                    android:id="@+id/day_img_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    />


                <ImageView
                    android:id="@+id/day_img_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    />


                <ImageView
                    android:id="@+id/day_img_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    />


                <ImageView
                    android:id="@+id/day_img_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    />

            </LinearLayout>

            <com.example.administrator.soweather.com.example.administrator.soweather.view.WeatherChartView
                xmlns:view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/line_char"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_white"
                view:dayColor="#E86114"
                view:nightColor="#1D4951"
                view:textColor="@color/contain_title"
                view:textSize="14sp"/>
        </LinearLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="0.8dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e01D4951"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/up"
                />
        </LinearLayout>

        <com.example.administrator.soweather.com.example.administrator.soweather.view.HorizontalRecyclerView
            android:id="@+id/day_weather"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="bottom"
            android:background="@drawable/table_white_shape"
            android:scrollbars="none">
        </com.example.administrator.soweather.com.example.administrator.soweather.view.HorizontalRecyclerView>
    </FrameLayout>


</FrameLayout>