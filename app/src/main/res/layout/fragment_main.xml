<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/smiling_face"/>

                <TextView
                    android:id="@+id/p25_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/contain_title"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/p25_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text=""
                    android:textColor="@color/contain_title"
                    android:textSize="15sp"/>
        <View
            android:layout_marginLeft="1dp"
            android:layout_width="2dp"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:background="@color/background_progress"/>
                <com.example.administrator.soweather.com.example.administrator.soweather.view.AutoScrollTextView
                    android:id="@+id/TextViewNotice"
                    android:layout_width="0dp"
                    android:layout_height="30px"
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:inputType="text"
                    android:textColor="@color/background_progress"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="25px">
                </com.example.administrator.soweather.com.example.administrator.soweather.view.AutoScrollTextView>
                <View
                    android:layout_marginRight="1dp"
                    android:layout_width="2dp"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/background_progress"/>
                <TextView
                    android:textColor="@color/background_progress"
                    android:id="@+id/dresss"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/place"
                    android:drawablePadding="3dp"
                    android:text="杭州"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/head1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/weatherImg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        />

                    <TextView
                        android:id="@+id/tmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/contain_title"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/tmp_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/contain_title"
                        android:textSize="17sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    >


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wind"/>

                    <TextView
                        android:id="@+id/sc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/a3"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/dir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/a3"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/deg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/a3"
                        android:textSize="14sp"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/red"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/today"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:text="今天数据"
                        android:textColor="@color/contain_title"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/life_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawablePadding="3dp"
                        android:drawableRight="@mipmap/to_right"
                        android:enabled="true"
                        android:gravity="center_vertical"
                        android:text="相关指数"
                        android:textColor="@color/contain_title"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/cold_index"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="感冒指数 :"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/flubrf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/contain_title"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@mipmap/dressing_index"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="穿衣指数 :"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/drsgbrf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/contain_title"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/index_tourism"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="旅游指数 :"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/travbrf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/contain_title"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@mipmap/washing_index"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="洗车指数 :"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/cwbrf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/contain_title"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/movement_index"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="运动指数 :"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/sportbrf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/contain_title"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@mipmap/uv_index"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="紫外线指数 :"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/uvbrf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/contain_title"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/head2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/humidity"
                        android:gravity="center"
                        android:text=""
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/pcpn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/rainfall"
                        android:gravity="center"
                        android:text="0%"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/fl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/feeling_temperature"
                        android:gravity="center"
                        android:text=""
                        android:textSize="10sp"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/red"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_blue"
            android:orientation="horizontal"
            android:padding="3dp">

            <RadioGroup
                android:id="@+id/select_more_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/type_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_moreweather_item"
                    android:button="@null"
                    android:checked="true"
                    android:padding="5dp"
                    android:text="Time"
                    android:textColor="@drawable/selector_moreweather_textcolor"/>

                <RadioButton
                    android:id="@+id/type_dally"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/selector_moreweather_item"
                    android:button="@null"
                    android:padding="5dp"
                    android:text="Dally"
                    android:textColor="@drawable/selector_moreweather_textcolor"/>
            </RadioGroup>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/more_weather"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:background="@color/left_fragment">
        </FrameLayout>
    </LinearLayout>
</LinearLayout>